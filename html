<body onload="triggerMadness()">

    <h1>Badli Padli ðŸ’©</h1>
    <script>
        function triggerMadness() {
            // Show alert when page opens
            alert("Tur Tur");

            // Start screen shake
            document.body.style.animation = "shake 0.5s infinite";

            // Create fart emoji animation
            let fart = document.createElement("div");
            fart.innerHTML = "ðŸ’¨";
            fart.classList.add("fart");
            document.body.appendChild(fart);

            // Randomize fart position near center
            fart.style.left = (window.innerWidth / 2 + Math.random() * 50 - 25) + "px";

            // Remove fart after animation ends
            setTimeout(() => {
                fart.remove();
                document.body.style.animation = "";
            }, 1500);
        }
    </script>

